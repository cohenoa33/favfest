<div id="artists_show">
  <div class="artists_show">
        <h1> <%= @artist.name%> </h1>
        <br>
        <h3> Genre: <%= @artist.genre%> </h3>
  </div>
 <div class="artist_info">
      <img src="<%=@artist.artist_image%>">
      
   
       <p> Artist Bio <br><br> <%=@artist.bio%> </p>
  </div>
<br>
  <span class="artist_show_festivals">
     <%# Festivals %>
   <% @artist.festivals.order(:name).uniq.each do |festival|%>
    <%= link_to festival.name, festival %> |
    <%end%>
   </span>
    <%# Video %>
      <iframe class="has-ratio" width="640" height="360" src=<%=@artist.video%> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>