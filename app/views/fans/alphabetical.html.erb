<div class="wishlist">


    <h1><%="#{@current_fan.user_name_capitalize}'s"%> wishlist</h1>
    <br>
    <p> you've added <%=@current_fan.total_wishlist %> festivals to your wishlist: </p>
    <br>
    
    <%= form_tag fan_path(@current_fan), method: :get do %> 
        <%= submit_tag "sort" %>
        <% end %>
    <div class='title'> 

    
        <%  @current_fan.alphabatize.collect do |festival| %>
            <h3><%=    link_to festival.name, festival %> </h3>
           <p id="img_fan_page" ><%= link_to image_tag(festival.image_url), festival %></p>
           <% if !@current_fan.find_comment(festival).nil? %>
            <p class="data"> Your comment:    <%=@current_fan.find_comment(festival) %> <p>
            <br>
            <%  end %>
            <%  end %>

        <br>
    </div>
</div>
