<div id="festivals">
  <% @festivals.each do |festival| %>
    <div class="festival"> 
      <div class="info">
      <h2> <%=link_to festival.name, festival %> </h2>
      <p class="location"><%= festival.location %></p>
      </div>
      <%= link_to image_tag(festival.image_url), festival %>

  </div>
  <% end %>
